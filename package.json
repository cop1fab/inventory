{
  "name": "inventory",
  "version": "1.0.0",
  "description": "This is a car tyre inventory application built with #NodeJs, #Express, #EJS, #Postgres, #Vue, #Materialize, #Axios, #Okta & #TypeScript ",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc copy-assets",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cop1fab/inventory.git"
  },
  "author": "Dr. Copain",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cop1fab/inventory/issues"
  },
  "homepage": "https://github.com/cop1fab/inventory#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "ejs": "^2.7.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.15.15",
    "@types/fs-extra": "^8.0.1",
    "@types/node": "^12.12.6",
    "@types/shelljs": "^0.8.6",
    "fs-extra": "^8.1.0",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.5",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  }
}
